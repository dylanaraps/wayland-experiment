#!/bin/sh -e

sh >/dev/tty
# version detection is broken
rm -rf .git subprojects/*/.git

# avoid scdoc dependency
sed -i "/subdir('doc')/d" meson.build

export DESTDIR="$1"

meson \
    --prefix=/usr \
    --buildtype=release \
    -Db_lto=true \
    . output

ninja -C output
ninja -C output install
